<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/career"
    android:backgroundTintMode="src_over"
    android:backgroundTint="#70FFFFFF"
    tools:context=".official">

    <TextView
        android:id="@+id/textViewxii1"
        android:layout_width="355dp"
        android:layout_height="108dp"
        android:background="#009688"
        android:fontFamily="@font/caveat_brush"
        android:gravity="center"
        android:text="INSIGHT"
        android:textColor="@color/white"
        android:textSize="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/caveat_brush"
        android:text="About Us"
        android:textSize="18sp"
        app:backgroundTint="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewxii1" />

    <Button
        android:id="@+id/logout"
        android:layout_width="134dp"
        android:layout_height="44dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/caveat_brush"
        android:gravity="center"
        android:onClick="logout"
        android:text="LogOut"
        android:textSize="18sp"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button10"
        android:layout_width="150dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/caveat_brush"
        android:text="My Account"
        android:textSize="18sp"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewxii1"
        app:layout_constraintVertical_bias="0.167" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="362dp"
        android:layout_height="83dp"
        android:layout_marginTop="24dp"
        android:background="#FFC107"
        android:fontFamily="@font/caveat_brush"
        android:gravity="center"
        android:text="HOW FAR HAVE U REACHED?"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="183dp"
        android:layout_height="61dp"
        android:layout_marginTop="56dp"
        android:fadingEdge="none"
        android:fontFamily="@font/caveat_brush"
        android:text="After Xth"
        android:textSize="20dp"
        app:backgroundTint="#8C2F4C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/button6"
        android:layout_width="183dp"
        android:layout_height="61dp"
        android:fontFamily="@font/caveat_brush"
        android:gravity="center"
        android:text="After XII th"
        android:textSize="20dp"
        app:backgroundTint="#8C2F4C"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:layout_constraintVertical_bias="0.142" />
</androidx.constraintlayout.widget.ConstraintLayout>